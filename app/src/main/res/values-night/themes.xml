<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Eyebrows" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/PrimaryYellow</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariantYellow</item>
        <item name="colorSecondary">@color/SecondaryOrange</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariantOrange</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Eyebrows.Splash" parent="Theme.SplashScreen">
        <!-- To set the background color -->
        <item name="windowSplashScreenBackground">@color/PrimaryYellow</item>

        <!-- To set the splash icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- to set the theme that will be used once the Splash screen is no longer visible -->
        <item name="postSplashScreenTheme">@style/Theme.Eyebrows</item>
    </style>
</resources>